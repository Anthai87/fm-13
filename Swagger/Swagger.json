{
  "openapi": "3.0.3",
  "info": {
    "title": "dtuPay- fm13",
    "description": "Documentation written by: DTU Pay is a service for easy bank transfers between merchants and their customers. Some of its primary features are; - Anonymity,security and reporting. Private information about merchants and users are never shared. - Security. DTU pays uses RFID to secure payments between merchants and customers - Reporting. Easy access to all transactions from the report service. Initial swagger setup, /Customer and /Payments made by Harald ",
    "contact": {
      "email": "s204436@student.dtu.dk"
      
    },
    "version": "1.3.0"
  },
  "servers": [
    {
      "url": "http://localhost:8000"
    },
    {
      "url": "http://fm-13.compute.dtu.dk:8000"
    }
  ],
  "paths": {
    "/customers": {
      "get": {
        "tags": [
          "customer"
        ],
        "summary": "Get a list of all customers",
        "description": "Get a list of all customers",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CustomerList"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "customer"
        ],
        "summary": "Add a new customer to DTU pay",
        "description": "Add a new customer to DTU pay",
        "requestBody": {
          "description": "Add a customer to DTU pay",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Customer"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CustomerID"
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          }
        }
      },
      "delete": {
        "tags": [
          "customer"
        ],
        "summary": "Deletes a customer",
        "operationId": "deleteCustomer",
        "parameters": [
          {
            "name": "api_key",
            "in": "header",
            "description": "",
            "required": false,
            "schema": {
              "$ref": "#/components/schemas/Customer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    },
    "/payments": {
      "get": {
        "tags": [
          "payments"
        ],
        "summary": "Get a list of all payents",
        "description": "Get a list of all payments",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaymentList"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "payment"
        ],
        "summary": "request a payment through DTU pay",
        "description": "payment",
        "requestBody": {
          "description": "payment information",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Payment"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful operation"
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Customer": {
        "type": "object",
        "properties": {
          "bankid": {
            "type": "string",
            "example": "bd7dfae1-2b44-459a-aaba-efd28d2a0449"
          },
          "firstName": {
            "type": "string",
            "example": "John"
          },
          "lastName": {
            "type": "string",
            "example": "Doe"
          },
          "cpr": {
            "type": "string",
            "example": 1234567890
          }
        }
      },
      "CustomerID": {
        "type": "object",
        "properties": {
          "Customerid": {
            "type": "string",
            "example": "bd7dfae1-2b44-459a-aaba-efd28d2a0449"
          }
        }
      },
      "CustomerList": {
        "type": "object",
        "properties": {
          "CustomerList": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Customer"
            }
          }
        }
      },
      "Payment": {
        "type": "object",
        "properties": {
          "payerID": {
            "type": "string",
            "example": "bd7dfae1-2b44-459a-aaba-efd28d2a0449"
          },
          "recieverID": {
            "type": "string",
            "example": "bd7dfae1-2b44-459a-aaba-efd28d2a0449"
          },
          "amount": {
            "type": "number",
            "example": 10
          },
          "token": {
            "type": "string",
            "example": "bd7dfae1-2b44-459a-aaba-efd28d2a0449"
          }
        }
      },
      "PaymentList": {
        "type": "object",
        "properties": {
          "PaymentList": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Payment"
            }
          }
        }
      }
    }
  }
}
